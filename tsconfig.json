{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2015",
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"experimentalDecorators": true,
		"removeComments": true,
		"rootDir": "./src/",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*", "src/logs"]
		}
	},
	"include": ["src/*.ts"],
	"compileOnSave": true
}
